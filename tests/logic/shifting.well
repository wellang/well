; Bit-shifting tests
~constants {
	~string:welcome = "- - - Bit shifting tests - -\n";

	~int:i = 10
	~string:a0 = "%d : %b\n"
}

; shifting using instructions.
~int:shiftBasic {
	; (i<<1)
	move~ i, r1
	add~ r4, r1, r1
	return~ r4	
}

; shifting using shift operators.
~int:shiftWell {
	; in the future this should be like "move~ (i<<1), r3"
	move~ i, r4
	return~ r4
}

~void:printIStatus {
	move~ r7, r3
	move~ a0, r1
	move~ i, r2
	call~ printf
}

~int:main {
	move~ welcome, r1
	call~ printf

	; before: i = 1010 after: i = 10100
	move~ i, r7
	call~ printIStatus
	call~ shiftBasic
	call~ printIStatus
	
	move~ i, r7
	call~ printIStatus
	call~ shiftWell
	call~ printIStatus

	return~ 0	
}
